<Window x:Class="Diplom.ImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Добавление студентов" Height="800" Width="1800">
    <Grid Style="{StaticResource Back}">
        <Button Margin="25" HorizontalAlignment="Right" VerticalAlignment="Top" Content="Вернуться назад" Click="Close_Click"/>
        <StackPanel Orientation="Vertical" Margin="15">
            <WrapPanel>
                <Button Content="Открыть файл" Margin="10" Click="OpenFile_Click"/>
                <Button Content="Добавить вручную" Margin="10" Click="AddStudent_Click"/>
                <Button Content="Загрузить в базу" Margin="10" Click="ImportData_Click"/>
            </WrapPanel>
            <DataGrid Name="DbGrig"/>
        </StackPanel>
    </Grid>
</Window>
