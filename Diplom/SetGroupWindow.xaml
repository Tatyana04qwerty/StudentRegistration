<Window x:Class="Diplom.SetGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Obselete="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Diplom"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Перевод студентов между группами" Height="250" Width="450">
    <Grid Style="{StaticResource Back}">
        <StackPanel Style="{StaticResource Header}">
            <TextBlock x:Name="tblInfo" Text="Выбрано студентов для перевода: N" FontSize="20" Margin="20"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 45 0 0">
            <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <WrapPanel>
                    <Label Content="Первести в группу: "/>
                    <TextBox x:Name="tbGroup" MaxLength="5" Margin="0 8"/>
                </WrapPanel>
            </WrapPanel>
            <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 10">
                <Button Content="Перевести" Margin="10" Click="Save_Click"/>
                <Button Content="Отменить" Click="Cancel_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
